
	import java.util.Scanner;

	public class FieldTrip {

	    public static void main(String[] args) {
	        try (Scanner scanner = new Scanner(System.in)) {
				final int BUS_CAPACITY = 45;
				System.out.print("Enter the number of people signed up for the field trip: ");
				int numberOfPeople = scanner.nextInt();
				int fullBuses = numberOfPeople / BUS_CAPACITY;
				int peopleInVans = numberOfPeople % BUS_CAPACITY;
				System.out.println("Number of full buses required: " + fullBuses);
				System.out.println("Number of people that will need to ride in vans: " + peopleInVans);
			}
	    }
	}

